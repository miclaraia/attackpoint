<?xml version="1.0" encoding="utf-8"?>
<resources>

    <item type="id" name="usercard_container" />
    <item type="id" name="usercard_username" />
    <item type="id" name="usercard_label" />
    <item type="id" name="usercard_detail" />

    <item type="id" name="usercard_realname" />
    <item type="id" name="usercard_location" />
    <item type="id" name="usercard_year" />

    <dimen name="usercard_detail_marginH">7dp</dimen>
    <dimen name="usercard_detail_marginV">7dp</dimen>
    <dimen name="usercard_detail_seperation">150dp</dimen>

    <dimen name="usercard_title_marginH">10dp</dimen>
    <dimen name="usercard_title_marginV">10dp</dimen>
    <dimen name="usercard_title">20dp</dimen>


    <style name="usercard_detail_layout">

    </style>
    
    <style name="usercard_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_textColorPrimary</item>
        <item name="android:textSize">18dp</item>
        
        <item name="android:layout_marginBottom">@dimen/usercard_detail_marginV</item>
        <item name="android:layout_marginTop">@dimen/usercard_detail_marginV</item>
        <item name="android:layout_marginLeft">@dimen/usercard_detail_marginH</item>
        <item name="android:layout_marginRight">@dimen/usercard_detail_marginH</item>
    </style>

    <style name="usercard_label" parent="usercard_parent">
        <item name="android:id">@id/usercard_label</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="usercard_detail" parent="usercard_parent">
        <item name="android:id">@id/usercard_detail</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginLeft">@dimen/usercard_detail_seperation</item>
    </style>

</resources>